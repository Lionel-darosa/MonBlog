{% extends "layout.html.twig" %}


{% block header %}
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/bootstrap/img/home-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Billet simple pour l'Alaska</h1>
                        <span class="subheading">A Blog Novel by Jean Forteroche</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block section %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto" id="articles">
                {% for article in postsOnPage %}
                    <div class="post-preview">
                        <a href="/article/{{ article.id }}?page=1">
                            <h2 class="post-title">
                                {{ article.titre }}
                            </h2>

                        </a>
                        <p class="post-meta">Posté par
                            <a href="#">{{ article.auteur }}</a>
                            le {{ article.date_article|date('j F Y') }}
                        </p>
                        <p class="post-subtitle">
                            {% set rawcontent= article.article %}
                            {{ rawcontent | striptags | slice(0, 200) }} ...

                        </p>
                    </div>
                    <hr>
                {% endfor %}



                <!-- Pager -->
                <div class="post-preview row">
                    <div class="col-sm-5">
                        {% if _get.page>1 %}
                            <a class="btn btn-primary float-left" href="/articles?page={{ _get.page-1 }}#articles">&larr; Précédents </a>
                        {% endif %}
                    </div>
                    <div class="col-sm-2">
                        <p class="badge ml-sm-3 mt-sm-3">Page {{ _get.page }}/{{ nbrPages }}</p>
                    </div>
                    <div class="col-sm-5">
                        {% if _get.page<nbrPages and nbrPages>1 %}
                            <a class="btn btn-primary float-right" href="/articles?page={{ _get.page+1 }}#articles">Suivants &rarr;</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr>
{% endblock %}

{% block footer %}
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <ul class="list-inline text-center">
                        <li class="list-inline-item">
                            <a href="#">
                      <span class="fa-stack fa-lg">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                      </span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#">
                      <span class="fa-stack fa-lg">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                      </span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#">
                      <span class="fa-stack fa-lg">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-github fa-stack-1x fa-inverse"></i>
                      </span>
                            </a>
                        </li>
                    </ul>
                    <p class="copyright text-muted">Copyright &copy; Your Website 2017</p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}
